<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Border" x:Key="ButtonBorderStyle">
        <Setter Property="BorderBrush" Value="{DynamicResource MainColor}"/>
        <Setter Property="CornerRadius" Value="45"/>
    </Style>

    <Style TargetType="Border" x:Key="StartGamePageBorderTextBackground">
        <Setter Property="Width" Value="418"/>
        <Setter Property="Height" Value="341"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="../Images/StartGamePageImages/StartGamePageTextBackground.png"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Border" x:Key="PopupBorderStyle">
        <Setter Property="CornerRadius" Value="30"/>
        <Setter Property="Background" Value="White"/>
    </Style>
</ResourceDictionary>